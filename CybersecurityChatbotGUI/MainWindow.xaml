<Window x:Class="CybersecurityChatbotGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CybersecurityChatbotGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <Button Content="Open Task Assistant"
                Width="200" Height="40"
                Click="OpenTaskManager_Click"/>

            <Button Content="Open Chatbot" 
                Width="200" Height="40" Margin="0,10,0,0"
                Click="OpenChatbot_Click"/>
        </StackPanel>
        <Button Content="Start Quiz"
        Width="200" Height="40" Margin="0,10,0,0"
        Click="StartQuiz_Click"/>


    </Grid>

</Window>
